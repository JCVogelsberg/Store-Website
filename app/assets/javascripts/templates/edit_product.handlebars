<h3>Edit {{name}}</h3>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{#each error in errors.name}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="name" class="form-control" value=name}}
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    {{#each error in errors.price}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="price" class="form-control" value=price}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{#each error in errors.description}}
      {{error.message}}
    {{/each}}
    {{input type="text" id="description" class="form-control" value=description}}
  </div>

  <button {{action updateProduct}} class="btn btn-default">Update Product</button>

</form>
